<% if @item.errors.any? %>
  <h2>You got an error </h2>
  <ul>
    <% @item.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>

    <% end %>
  </ul>
  <% end %>


<%= form_with(model: @item,local: true, data: { turbo: false } ) do |f| %>

<p> 
  <%= f.label :name, "Item Name" %><br/>
  <%= f.text_field :name %>
</p>

<p> 
  <%= f.label :description, "description" %><br/>
  <%= f.text_field :description %>
</p>


<p>
  <%= f.submit %>
</p>

<% end %>