<h1>Display all the items</h1>


<table class = "table" > 
  <thead>
    <tr>
      <th>Item</th>
      <th>Descriptions</th>
      <th>Owner</th>

    </tr>

    <tbody>
      <% @items.each do |item|%>
      <tr>
        <td><%= item.name %></td>
        <td><%=item.description %></td>
          <% if (item.user_id.to_i != 0) %>
            <td>Owned by <%= item.owner_name %></td>
            <% end %>
        <% end %>
    </tbody>
  </thead>
</table>

